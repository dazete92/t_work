command arguments {
   local('@ips');

   @ips = split(';', "$1");
   
   fire_event_local("launch_scan", @ips);
}

on launch_scan {
   local('$console $ip $ips');
   
   $console = console();
   
   foreach $ip ($1) {
      $ips = $ips . $ip . " "
   }
   println($ips);

   cmd($console, "db_nmap --min-hostgroup 96 -sS -n -sU -T4 -A -v -n -F $ips");
}

on console_db_nmap {
   println("Scanning Done.");
   quit();
}
